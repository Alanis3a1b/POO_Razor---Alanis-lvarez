<h1>Mantenimiento de Equipos</h1>
<br/>
<form asp-action="CrearEquipos">
    @*Inicio del formulario*@
    <div class="form-group row mb-4">
        @*Ojo, por cada elemento a agregar, primero va la div del Label y luego ya sea su textbox, lista ,etc*@
        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre", "", new {@class="form-control"})
        </div>

        <div class="col-sm-2">
            @Html.Label("lbltipoequipo", "Tipo de equipo")
        </div>
        @* //Listado de los tipos de equipo*@
        <div class="col-sm-4">
            @Html.DropDownList("id_tipo_equipo", ViewData["listadoDeTipoEquipos"] as SelectList, "Seleccione un tipo de equipo", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblDescripcion", "Descripción")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder="Ingrese la descripción" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblmarca", "Marca")
        </div>
        @* //Listado de  las marcas de la tabla marcas *@
        <div class="col-sm-4">
            @Html.DropDownList("id_marca", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblmodelo", "Modelo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("modelo", "", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblanyocompra", "Año de compra")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("anio_compra", "", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblcosto", "Costo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo", "", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblvidautil", "Vida util")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("vida_util", "", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblestadoequipo", "Estado del equipo")
        </div>
        @* //Listado de los tipos de estado de equipo *@
        <div class="col-sm-4">
            @Html.DropDownList("id_estados_equipo", ViewData["listadoDeEstados"] as SelectList, "Seleccione una estado", new { @class = "form-control" })
        </div>

        <div class="col-sm-2">
            @Html.Label("lblestado", "Inactivo")
        </div>
        <div class="col-sm-4">
            @Html.CheckBox("estado", "FUERA DE USO")
        </div>
+
+
        <div class="form-group row mb-4">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Descripción</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
            {
                <td>@equipo.nombre</td>
                <td>@equipo.descripcion</td>
                <td>@equipo.marca_nombre</td>
            }
        </tbody>
    </table>

    @*Fin del formulario*@
</form>
